{
	"about": {
		"title": "PowerDNS",
		"explanation": "PowerDNS Server"
	},
	"provider": {
		"type": "power_dns"
	},
	"configuration": {
		"api_key": "^^random(128)^^",
		"server_url": "http://[fd61:d025:74d7:f46a::ffff]:8081/api/v1",
		"version": "1.4.0",
		"source": "pan-net/powerdns",
		"ttl": 120,
		"dns_type": "none"
	},
	"volumes": [
		{
			"destination": "/var/lib/powerdns/",
			"source": "data"
		}
	],
	"bindings": [
		{
			"type": "embed",
			"target": {
				"repository": "https://github.com/v2Blueprints/enginesd_debian_base"
			}
		}
	],
	"system_packages": {
		"adds": [
			"pdns-server",
			"pdns-backend-sqlite3",
			"sqlite"
		]
	},
	"containers": [
		{
			"type": "lxd"
		}
	]
}
